    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mainpackage.api.MainActivity">


        <fragment
            android:id="@+id/fragment2"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/my_nav"
            tools:layout="@layout/fragment_movietrending"
            tools:layout_editor_absoluteX="155dp"
            tools:layout_editor_absoluteY="197dp" />

        <com.gauravk.bubblenavigation.BubbleNavigationConstraintView
            android:id="@+id/bubbleNavigationBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            app:bnc_mode="spread"
            app:elevation="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.gauravk.bubblenavigation.BubbleToggleView
                android:id="@+id/bubbleToggleView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:bt_active="true"
                app:bt_colorActive="@android:color/holo_green_light"
                app:bt_colorInactive="@android:color/holo_green_light"
                app:bt_icon="@drawable/ic_baseline_home_24"
                app:bt_title="Home"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/bubbleToggleView2" />

            <com.gauravk.bubblenavigation.BubbleToggleView
                android:id="@+id/bubbleToggleView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:bt_colorActive="@android:color/holo_orange_light"
                app:bt_colorInactive="@android:color/holo_orange_light"
                app:bt_icon="@drawable/ic_baseline_search_24"
                app:bt_title="Search"
                app:layout_constraintLeft_toRightOf="@id/bubbleToggleView1"
                app:layout_constraintRight_toLeftOf="@id/bubbleToggleView3" />

            <com.gauravk.bubblenavigation.BubbleToggleView
                android:id="@+id/bubbleToggleView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:bt_colorActive="@android:color/holo_red_light"
                app:bt_colorInactive="@android:color/holo_red_light"
                app:bt_icon="@drawable/favouriteicon"
                app:bt_title="Favoutites"
                app:layout_constraintLeft_toRightOf="@id/bubbleToggleView2"
                app:layout_constraintRight_toLeftOf="@id/bubbleToggleView4" />

            <com.gauravk.bubblenavigation.BubbleToggleView
                android:id="@+id/bubbleToggleView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:bt_colorActive="@android:color/holo_blue_light"
                app:bt_colorInactive="@android:color/holo_blue_light"
                app:bt_icon="@drawable/ic_baseline_library_books_24"
                app:bt_title="Bookings"
                app:layout_constraintLeft_toRightOf="@id/bubbleToggleView3"
                app:layout_constraintRight_toLeftOf="@id/bubbleToggleView5" />

            <com.gauravk.bubblenavigation.BubbleToggleView
                android:id="@+id/bubbleToggleView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:bt_colorActive="@android:color/holo_purple"
                app:bt_colorInactive="@android:color/holo_purple"
                app:bt_icon="@drawable/ic_baseline_person_24"
                app:bt_title="Profile"
                app:layout_constraintLeft_toRightOf="@id/bubbleToggleView4"
                app:layout_constraintRight_toRightOf="parent" />

        </com.gauravk.bubblenavigation.BubbleNavigationConstraintView>

    </androidx.constraintlayout.widget.ConstraintLayout>

